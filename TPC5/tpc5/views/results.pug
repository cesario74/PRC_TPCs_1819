extends layout
block content
    .w3-card-4.w3-center
      header.w3-header.w3-green
        h1.w3-center 
          b Resultados
      .w3-container.w3-border.w3-responsive
        h4.w3-text-green
          b Query:
          b= query
        br 
        if length > 1
          table.w3-center.w3-table-all
            tr
            each h in head
              th.w3-center.w3-text-green= h
            each k in results.results.bindings
              tr
                each h in head  
                  td= k[h].value
        else
          .w3-container
            .w3-row
              .w3-col.m6.l3
                h2.w3-text-green
                |&nbsp;
                |&nbsp;
              .w3-col.m6.m4    
                table.w3-table-all
                  tr
                  each h in head
                    th.w3-center.w3-text-green= h
                  each k in results.results.bindings
                    tr
                      each h in head
                        td= k[h].value
            br
      p
        a(style='text-decoration: none' href='/')
          |Regressar á página inicial  
      footer.w3-container.w3-green(id='footer')
          address GraphDB - MyApp by cp74